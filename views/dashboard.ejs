<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<h1 style="text-transform: capitalize"><%= user.userName %> Stories</h1>
		<nav>
			<a href="/todos">Todos</a> <a href="/story/allStories">All Stories</a>
		</nav>
		<ul>
			<% stories.forEach( el => { %>
			<li class="storyItems" data-id="<%=el._id%>">
				<h3><%= el.title %> <span>(<%=el.status%>)</span></h3>
				<p>
					<%= el.body.slice(0,100)%>...<a href="<%= el._id %>">Read more</a>
				</p>
				<form
					method="POST"
					action="/story/deleteStory/<%=el._id%>?_method=DELETE">
					<button type="submit">Delete</button>
				</form>
			</li>
			<% }) %>
		</ul>

		<form action="/story/createStory" method="POST">
			<input type="text" placeholder="title" name="title" />
			<select name="status">
				<option value="public" selected>Public</option>
				<option value="private">Private</option>
			</select>
			<textarea
				id="story"
				name="body"
				rows="5"
				cols="33"
				placeholder="What on you mind today?"></textarea>
			<input type="submit" />
		</form>

		<%- include('partials/footer') %>
	</body>
</html>
